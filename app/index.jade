doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Pure Template
    link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/pure-min.css')
    link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/grids-responsive-min.css')
    link(rel='stylesheet', href='./css/app.css')
    link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet")
  body
    .top
      .pure-g
        .pure-u-1-4
          h1 Yahtzee

      .pure-g
        .pure-u-1
          form.pure-form
            fieldset
              h2 New Player
              input#username(type="text" placeholder="Username")
              | &nbsp;
              input#avatar(type="text" placeholder="Avatar Image URL")
              | &nbsp;
              button#add.pure-button.pure-button-primary(type="submit") Add
          form.pure-form
              input#score(type="text" placeholder="Score")
              | &nbsp;
              button#add-score.pure-button.pure-button-primary(type="submit") Add Score
      .pure-g
        .pure-u-3-7
          #dice
            img.dice(src='./media/dice1.png')
            img.dice(src='./media/dice1.png')
            img.dice(src='./media/dice1.png')
            img.dice(src='./media/dice1.png')
            img.dice(src='./media/dice1.png')
        .pure-u-4-7
          button.pure-button.button-success#roll Roll Dice

    .pure-g
      .pure-u-1
        table#game.pure-table.pure-table-bordered
          thead
            tr
              th Avatar
              th Name
              th 1
              th 2
              th 3
              th 4
              th 5
              th 6
              th 7
              th 8
              th 9
              th 10
              th 11
              th 12
              th 13
              th Total
          tbody

    .pure-g
      .pure-u-1.arrowSet
        i.arrow#up(class="fa fa-arrow-circle-o-up")
        i.arrow#down(class="fa fa-arrow-circle-o-down")
        i.arrow#left(class="fa fa-arrow-circle-o-left")
        i.arrow#right(class="fa fa-arrow-circle-o-right")


    script(src='./js/vendor/jquery-2.1.0.js')
    script(src='./js/source/main.js')
